{
	"name": "@repo/ui",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"main": "./src/index.ts",
	"files": [
		"src/**"
	],
	"exports": {
		"./login-form": "./src/login-form/login-form.tsx",
		"./card": "./src/card/card.tsx",
		"./input": "./src/input/input.tsx",
		"./label": "./src/label/label.tsx",
		"./button": "./src/button/button.tsx",
		"./link": "./src/link/link.tsx",
		"./counter-button": "./src/counter-button/counter-button.tsx",
		".": "./index.ts"
	},
	"scripts": {
		"check:types": "tsc --noEmit",
		"test": "bun test --dom",
		"dev": "bun run scripts/dev.ts",
		"dev:storybook": "bunx --bun storybook dev --no-open --port 3006 --host 0.0.0.0",
		"prebuild": "bun run ../../scripts/update-package-json.ts",
		"build:storybook": "bunx --bun storybook build -o dist-storybook",
		"start": "bunx --bun serve dist-storybook",
		"test:watch": "bun test --watch --dom",
		"test:coverage": "bun test --coverage --dom"
	},
	"dependencies": {
		"@radix-ui/react-label": "2.1.7",
		"@radix-ui/react-slot": "1.2.3",
		"@repo/utils": "workspace:*",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.532.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"tailwind-merge": "3.3.1"
	},
	"devDependencies": {
		"@happy-dom/global-registrator": "18.0.1",
		"@repo/test-preset": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@storybook/addon-a11y": "9.0.18",
		"@storybook/addon-links": "9.0.18",
		"@storybook/addon-themes": "9.0.18",
		"@storybook/react": "9.0.18",
		"@storybook/react-vite": "9.0.18",
		"@storybook/testing-library": "0.2.2",
		"@testing-library/dom": "10.4.1",
		"@testing-library/jest-dom": "6.6.4",
		"@testing-library/react": "16.3.0",
		"autoprefixer": "10.4.21",
		"chalk": "5.4.1",
		"serve": "14.2.4",
		"storybook": "9.0.18",
		"tailwindcss": "4.1.11",
		"tailwindcss-animate": "1.0.7"
	}
}
