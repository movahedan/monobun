{
	"name": "@repo/ui",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"sideEffects": false,
	"type": "module",
	"files": [
		"dist/**",
		"dist"
	],
	"scripts": {
		"build": "bun run ./prebuild.ts && bunchee",
		"dev": "bunchee --watch",
		"start": "bunchee --watch",
		"check:types": "tsc --noEmit",
		"test": "jest --environment=jsdom"
	},
	"dependencies": {
		"@repo/utils": "workspace:*",
		"@radix-ui/react-slot": "1.2.3",
		"@types/react": "18.3.23",
		"@types/react-dom": "18.3.7",
		"class-variance-authority": "0.7.1",
		"react": "18.3.1",
		"react-dom": "18.3.1"
	},
	"devDependencies": {
		"@jest/globals": "29.7.0",
		"@repo/jest-presets": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@testing-library/jest-dom": "6.4.2",
		"@testing-library/react": "14.2.1",
		"bunchee": "6.5.2",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"typescript": "5.8.3"
	},
	"jest": {
		"preset": "@repo/jest-presets/browser",
		"moduleNameMapper": {
			"@repo/utils/cn": "<rootDir>/../utils/src/cn.ts"
		}
	},
	"exports": {
		"./button": {
			"import": {
				"types": "./dist/button/button.d.mts",
				"default": "./dist/button/button.mjs"
			},
			"require": {
				"types": "./dist/button/button.d.ts",
				"default": "./dist/button/button.js"
			}
		},
		"./link": {
			"import": {
				"types": "./dist/link/link.d.mts",
				"default": "./dist/link/link.mjs"
			},
			"require": {
				"types": "./dist/link/link.d.ts",
				"default": "./dist/link/link.js"
			}
		},
		"./counter-button": {
			"import": {
				"types": "./dist/counter-button/counter-button.d.mts",
				"default": "./dist/counter-button/counter-button.mjs"
			},
			"require": {
				"types": "./dist/counter-button/counter-button.d.ts",
				"default": "./dist/counter-button/counter-button.js"
			}
		}
	}
}
