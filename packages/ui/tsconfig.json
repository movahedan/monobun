{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"lib": ["dom", "ES2015"],
		"sourceMap": true,
		"noEmit": false,
		"emitDeclarationOnly": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@repo/utils/*": ["../utils/src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"../utils/src/*.ts",
		"../test-preset/matchers.d.ts"
	]
}
