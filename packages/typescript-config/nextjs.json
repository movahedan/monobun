{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"target": "ES2022",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"allowJs": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["src", "next.config.ts", "next-env.d.ts", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
