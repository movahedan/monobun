{
  "name": "@intershell/core",
  "version": "0.1.0",
  "description": "Core utilities and types for the InterShell CLI framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./colorify": {
      "import": "./dist/colorify.js",
      "types": "./dist/colorify.d.ts"
    },
    "./wrapshell": {
      "import": "./dist/wrapshell.js",
      "types": "./dist/wrapshell.d.ts"
    },
    "./cli-tools": {
      "import": "./dist/cli-tools.js",
      "types": "./dist/cli-tools.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "interactive",
    "terminal",
    "shell",
    "framework"
  ],
  "author": "Monobun",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}