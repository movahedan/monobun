{
	"private": false,
	"name": "@repo/intershell",
	"version": "0.3.0",
	"description": "Core utilities and types for the InterShell CLI framework",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"intershell": "./dist/index.js"
	},
	"exports": {
		"./core": "./src/core/index.ts",
		"./interactive": "./src/interactive/index.ts",
		".": "./index.ts",
		"./entities": "./src/entities/index.ts"
	},
	"oclif": {
		"bin": "intershell",
		"dirname": "intershell",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help",
			"@oclif/plugin-version"
		]
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"packageManager": "bun@1.3.1",
	"scripts": {
		"check:types": "tsc --noEmit",
		"build": "rm -rf dist && tsc && echo '#!/usr/bin/env bun' > dist/index.js.tmp && tail -n +2 dist/index.js >> dist/index.js.tmp && mv dist/index.js.tmp dist/index.js",
		"postbuild": "bun run dist/index.js update-package-json"
	},
	"devDependencies": {
		"@oclif/dev-cli": "1.26.10",
		"@repo/test-preset": "workspace:*",
		"@repo/typescript-config": "workspace:*"
	},
	"peerDependencies": {
		"@biomejs/biome": "2.1.2",
		"lefthook": "1.12.4",
		"turbo": "2.5.8",
		"typescript": "5.9.3"
	},
	"keywords": [
		"cli",
		"interactive",
		"terminal",
		"framework",
		"pages",
		"navigation",
		"state-management",
		"command-parser",
		"plugin-system",
		"entities",
		"commit-management",
		"branch-validation"
	],
	"dependencies": {
		"@oclif/core": "4.5.4",
		"@oclif/plugin-help": "6.2.33",
		"@oclif/plugin-version": "2.2.36"
	}
}
