{
	"name": "kitchen-sink",
	"private": true,
	"scripts": {
		"//biome": "/////////////////////////////////////////////////////////////",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"//turbo": "/////////////////////////////////////////////////////////////",
		"clean": "turbo run clean",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"build": "turbo run build",
		"start": "turbo run start",
		"check-types": "turbo run check-types",
		"//changesets": "////////////////////////////////////////////////////////",
		"changesets": "bunx --install=force --bun @changesets/cli",
		"//repo": "//////////////////////////////////////////////////////////////",
		"repo:start": "bun run scripts/setup/start.ts",
		"repo:stop": "bun run scripts/setup/stop.ts",
		"repo:restart": "bun run scripts/setup/restart.ts",
		"repo:cleanup": "bun run scripts/setup/cleanup.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0-beta.6",
		"@changesets/cli": "2.29.4",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"chalk": "5.4.1",
		"lefthook": "1.11.13",
		"turbo": "2.5.3",
		"typescript": "5.8.3"
	},
	"overrides": {
		"@types/react": "18.3.22",
		"@types/react-dom": "18.3.7",
		"typescript": "5.8.3",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"vite": "6.3.5"
