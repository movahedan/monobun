{
	"name": "kitchen-sink",
	"private": true,
	"scripts": {
		"//setup": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"setup": "bun run scripts/setup.ts",
		"cleanup": "bun run scripts/cleanup.ts",
		"sync:vscode": "bun run scripts/sync-vscode-config.ts",
		"//biome and checks": "//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"check:types": "turbo run check:types",
		"check:types:force": "turbo run check:types --force",
		"check:quick": "bun run check:fix && turbo run check:types --affected && bun run test --affected && bun run build --affected",
		"check:pipelines": "bun run scripts/check-pipelines.ts",
		"//turbo": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"build": "turbo run build",
		"build:force": "turbo run build --force",
		"start": "turbo run start",
		"//devcontainers": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev:test-devcontainer": "bun run scripts/check-devcontainer.ts",
		"dev:compose": "docker compose -f .devcontainer/docker-compose.dev.yml",
		"dev:status": "bun run dev:compose ps",
		"dev:health": "bun run dev:compose ps --format table",
		"dev:clean": "bun run dev:compose down --remove-orphans --volumes",
		"dev:clean:all": "bun run dev:clean && bun run scripts/cleanup.ts",
		"dev:build": "bun run dev:compose build --parallel",
		"dev:build:cache": "bun run dev:compose build --parallel --no-cache",
		"dev:down": "bun run dev:compose --profile all down --remove-orphans",
		"dev:up": "bun run dev:compose --profile all up -d",
		"dev:logs": "bun run dev:compose logs -f",
		"dev:watch": "bun run dev:compose watch",
		"dev:admin:up": "bun run dev:compose --profile admin up -d",
		"dev:admin:logs": "bun run dev:compose logs -f admin",
		"dev:admin:watch": "bun run dev:compose watch admin",
		"dev:blog:up": "bun run dev:compose --profile blog up -d",
		"dev:blog:logs": "bun run dev:compose logs -f blog",
		"dev:blog:watch": "bun run dev:compose watch blog",
		"dev:storefront:up": "bun run dev:compose --profile storefront up -d",
		"dev:storefront:logs": "bun run dev:compose logs -f storefront",
		"dev:storefront:watch": "bun run dev:compose watch storefront",
		"dev:api:up": "bun run dev:compose --profile api up -d",
		"dev:api:logs": "bun run dev:compose logs -f api",
		"dev:api:watch": "bun run dev:compose watch api",
		"//turbo docker optimized": "////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev:turbo:build": "turbo run build --filter=@repo/* && bun run dev:build",
		"dev:turbo:affected": "docker compose -f .devcontainer/docker-compose.dev.yml --profile all up -d --build && turbo run dev --affected",
		"//prodcontainers": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"prod:compose": "COMPOSE_PROJECT_NAME=repo-prod docker compose -f docker-compose.yml",
		"prod:up": "bun run prod:compose up -d",
		"prod:down": "bun run prod:compose down",
		"prod:build": "bun run prod:compose build",
		"prod:status": "bun run prod:compose ps",
		"//changesets": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"changesets": "bunx --install=force --bun @changesets/cli"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@changesets/cli": "2.29.5",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"bun-types": "1.2.19",
		"chalk": "5.4.1",
		"lefthook": "1.11.16",
		"turbo": "2.5.5",
		"typescript": "5.8.3"
	},
	"overrides": {
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"typescript": "5.8.3",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"vite": "6.3.5"
	},
	"packageManager": "bun@1.2.15",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
