{
	"name": "kitchen-sink",
	"private": true,
	"scripts": {
		"//biome and checks": "//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"check:types": "turbo run check:types",
		"check:quick": "bun run check && turbo run check:types --affected && bun run test --affected && bun run build --affected",
		"//turbo": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"build": "turbo run build",
		"start": "turbo run start",
		"//devcontainers": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev:setup": "bun run scripts/setup/setup.dev.ts",
		"dev:status": "docker compose -f docker-compose.dev.yml ps",
		"dev:health": "docker compose -f docker-compose.dev.yml ps --format table",
		"dev:clean": "docker compose -f docker-compose.dev.yml down --remove-orphans --volumes && docker volume prune -f && docker system prune -f",
		"dev:clean:all": "bun run dev:clean && bun run scripts/setup/cleanup.dev.ts",
		"dev:build": "docker compose -f docker-compose.dev.yml build --parallel",
		"dev:build:cache": "docker compose -f docker-compose.dev.yml build --parallel --no-cache",
		"dev:down": "docker compose -f docker-compose.dev.yml --profile all down --remove-orphans",
		"dev:up": "docker compose -f docker-compose.dev.yml --profile all up -d",
		"dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
		"dev:watch": "docker compose -f docker-compose.dev.yml watch",
		"dev:admin:up": "docker compose -f docker-compose.dev.yml --profile admin up -d",
		"dev:admin:logs": "docker compose -f docker-compose.dev.yml logs -f admin",
		"dev:admin:watch": "docker compose -f docker-compose.dev.yml watch admin",
		"dev:blog:up": "docker compose -f docker-compose.dev.yml --profile blog up -d",
		"dev:blog:logs": "docker compose -f docker-compose.dev.yml logs -f blog",
		"dev:blog:watch": "docker compose -f docker-compose.dev.yml watch blog",
		"dev:storefront:up": "docker compose -f docker-compose.dev.yml --profile storefront up -d",
		"dev:storefront:logs": "docker compose -f docker-compose.dev.yml logs -f storefront",
		"dev:storefront:watch": "docker compose -f docker-compose.dev.yml watch storefront",
		"dev:api:up": "docker compose -f docker-compose.dev.yml --profile api up -d",
		"dev:api:logs": "docker compose -f docker-compose.dev.yml logs -f api",
		"dev:api:watch": "docker compose -f docker-compose.dev.yml watch api",
		"//turbo docker optimized": "////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"dev:turbo:build": "turbo run build --filter=@repo/* && bun run dev:build",
		"dev:turbo:affected": "docker compose -f docker-compose.dev.yml --profile all up -d --build && turbo run dev --affected",
		"//prodcontainers": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"prod:up": "docker compose -f docker-compose.prod.yml up -d",
		"prod:down": "docker compose -f docker-compose.prod.yml down",
		"prod:build": "docker compose -f docker-compose.prod.yml build",
		"prod:status": "docker compose -f docker-compose.prod.yml ps",
		"//changesets": "/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////",
		"changesets": "bunx --install=force --bun @changesets/cli"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@changesets/cli": "2.29.5",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"bun-types": "1.2.18",
		"chalk": "5.4.1",
		"lefthook": "1.11.16",
		"turbo": "2.5.5",
		"typescript": "5.8.3"
	},
	"overrides": {
		"@types/react": "18.3.23",
		"@types/react-dom": "18.3.7",
		"typescript": "5.8.3",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"vite": "6.3.5"
	},
	"packageManager": "bun@1.2.15",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
