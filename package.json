{
	"name": "kitchen-sink",
	"private": true,
	"scripts": {
		"//biome": "/////////////////////////////////////////////////////////////",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"//turbo": "/////////////////////////////////////////////////////////////",
		"clean": "turbo run clean",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"build": "turbo run build",
		"start": "turbo run start",
		"check-types": "turbo run check-types",
		"//app": "//////////////////////////////////////////////////////////////",
		"dev:admin": "turbo run dev --filter=admin",
		"dev:blog": "turbo run dev --filter=blog",
		"dev:storefront": "turbo run dev --filter=storefront",
		"dev:api": "turbo run dev --filter=api",
		"//docker": "////////////////////////////////////////////////////////////",
		"docker:dev": "docker-compose -f docker-compose.dev.yml up",
		"docker:dev:admin": "docker-compose -f docker-compose.dev.yml up admin",
		"docker:dev:blog": "docker-compose -f docker-compose.dev.yml up blog",
		"docker:dev:storefront": "docker-compose -f docker-compose.dev.yml up storefront",
		"docker:dev:api": "docker-compose -f docker-compose.dev.yml up api",
		"docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
		"//changesets": "////////////////////////////////////////////////////////",
		"changesets": "bunx --install=force --bun @changesets/cli",
		"//repo": "//////////////////////////////////////////////////////////////",
		"repo:start": "bun run scripts/setup/start.ts",
		"repo:stop": "bun run scripts/setup/stop.ts",
		"repo:restart": "bun run scripts/setup/restart.ts",
		"repo:cleanup": "bun run scripts/setup/cleanup.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@changesets/cli": "2.29.5",
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"chalk": "5.4.1",
		"jest-environment-jsdom": "29.7.0",
		"lefthook": "1.11.16",
		"turbo": "2.5.4",
		"typescript": "5.8.3"
	},
	"overrides": {
		"@types/react": "18.3.23",
		"@types/react-dom": "18.3.7",
		"typescript": "5.8.3",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"vite": "6.3.5",
		"@radix-ui/react-slot": "1.2.3"
	},
	"packageManager": "bun@1.2.15",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
