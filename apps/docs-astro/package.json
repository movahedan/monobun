{
	"private": true,
	"name": "docs-astro",
	"description": "Documentation site built with Astro for the monobun project",
	"type": "module",
	"scripts": {
		"astro": "astro",
		"dev": "astro dev",
		"build": "astro build",
		"start": "astro preview",
		"check": "astro check && biome check .",
		"check:fix": "astro check && biome check . --write",
		"check:types": "astro check && tsc --noEmit --project tsconfig.ts.json"
	},
	"dependencies": {
		"@astrojs/tailwind": "6.0.2",
		"@tailwindcss/typography": "0.5.16",
		"astro": "4.16.19",
		"lucide-astro": "0.536.0",
		"marked": "16.1.2"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.4",
		"@repo/typescript-config": "workspace:*",
		"@tailwindcss/vite": "4.1.12",
		"tailwindcss": "4.1.12",
		"typescript": "5.8.3"
	}
}
